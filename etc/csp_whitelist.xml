<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="connect-src">
            <values>
                <value id="tapita_io" type="host">tapita.io</value>
                <value id="sub_tapita_io" type="host">*.tapita.io</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="tapita_io_lib" type="host">tapita.io</value>
                <value id="sub_tapita_io_lib" type="host">*.tapita.io</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="tapita_io_cnd" type="host">tapita.io</value>
                <value id="sub_tapita_io_cnd" type="host">*.tapita.io</value>
            </values>
        </policy>
        <policy id="form-action">
            <values>
                <value id="tapita_io" type="host">tapita.io</value>
                <value id="sub_tapita_io" type="host">*.tapita.io</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="tapita_io_frame" type="host">tapita.io</value>
                <value id="sub_tapita_io_frame" type="host">*.tapita.io</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
